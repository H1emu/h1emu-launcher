<Window x:Class="H1EmuLauncher.LauncherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:f="clr-namespace:H1EmuLauncher.Classes"
        mc:Ignorable="d"
        UseLayoutRounding="True"
        Title="H1Emu Launcher"
        x:Name="MainLauncher"
        Width="1300"
        Height="750"
        WindowStartupLocation="CenterScreen"
        Background="#FF2A2A32"
        FontFamily="Bahnschrift"
        FontSize="16"
        Loaded="LauncherWindowLoaded"
        Activated="MainLauncherActivated"
        ContentRendered="MainLauncherContentRendered"
        Closed="MainLauncherClosed">

        <!-- Hide window border but keep animations -->
        <WindowChrome.WindowChrome>
            <WindowChrome GlassFrameThickness="0"
                          CornerRadius="0"
                          CaptionHeight="0"
                          ResizeBorderThickness="0"
                          UseAeroCaptionButtons="False"/>

        </WindowChrome.WindowChrome>
    
        <!-- Tasbar icon info -->
        <Window.TaskbarItemInfo>
            <TaskbarItemInfo x:Name="taskbarIcon" Description="H1Emu Launcher"/>
        </Window.TaskbarItemInfo>

    <Window.Resources>
        <Storyboard x:Key="NextImageAnimation"
                    Completed="StoryboardCompleted">
            
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)"
                                           Storyboard.TargetName="carouselImage">
                
                <EasingDoubleKeyFrame KeyTime="00:00:00.00" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.05" Value="-3"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.10" Value="-6"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.15" Value="-12"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.20" Value="-24"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.25" Value="-48"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.30" Value="-96"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.35" Value="-144"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.40" Value="-192"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.60" Value="-381"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.65" Value="-429"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.70" Value="-477"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.75" Value="-525"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.80" Value="-549"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.85" Value="-561"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.90" Value="-567"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.95" Value="-570"/>
                <EasingDoubleKeyFrame KeyTime="00:00:01.00" Value="-573"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        
        <Storyboard x:Key="NextImageAnimationFollow"
                    Completed="StoryboardCompleted">
            
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)"
                                           Storyboard.TargetName="carouselImageSlider">
                
                <EasingDoubleKeyFrame KeyTime="00:00:00.00" Value="573"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.05" Value="570"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.10" Value="567"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.15" Value="561"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.20" Value="549"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.25" Value="525"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.30" Value="477"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.35" Value="429"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.40" Value="381"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.60" Value="192"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.65" Value="144"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.70" Value="96"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.75" Value="48"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.80" Value="24"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.85" Value="12"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.90" Value="6"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.95" Value="3"/>
                <EasingDoubleKeyFrame KeyTime="00:00:01.00" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        
        <Storyboard x:Key="PrevImageAnimation"
                    Completed="StoryboardCompleted">
            
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)"
                                           Storyboard.TargetName="carouselImage">
                
                <EasingDoubleKeyFrame KeyTime="00:00:00.00" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.05" Value="3"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.10" Value="6"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.15" Value="12"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.20" Value="24"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.25" Value="48"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.30" Value="96"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.35" Value="144"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.40" Value="192"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.60" Value="381"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.65" Value="429"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.70" Value="477"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.75" Value="525"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.80" Value="549"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.85" Value="561"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.90" Value="567"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.95" Value="570"/>
                <EasingDoubleKeyFrame KeyTime="00:00:01.00" Value="573"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        
        <Storyboard x:Key="PrevImageAnimationFollow"
                    Completed="StoryboardCompleted">
            
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)"
                                           Storyboard.TargetName="carouselImageSlider">
                
                <EasingDoubleKeyFrame KeyTime="00:00:00.00" Value="-573"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.05" Value="-570"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.10" Value="-567"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.15" Value="-561"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.20" Value="-549"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.25" Value="-525"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.30" Value="-477"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.35" Value="-429"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.40" Value="-381"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.60" Value="-192"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.65" Value="-144"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.70" Value="-96"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.75" Value="-48"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.80" Value="-24"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.85" Value="-12"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.90" Value="-6"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.95" Value="-3"/>
                <EasingDoubleKeyFrame KeyTime="00:00:01.00" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="ButtonBase.Click"
                      SourceName="triggerPrevImageStoryboard">
            
            <BeginStoryboard Storyboard="{StaticResource PrevImageAnimationFollow}"/>
            <BeginStoryboard Storyboard="{StaticResource PrevImageAnimation}"/>
        </EventTrigger>
        
        <EventTrigger RoutedEvent="ButtonBase.Click"
                      SourceName="triggerNextImageStoryboard">
            
            <BeginStoryboard Storyboard="{StaticResource NextImageAnimationFollow}"/>
            <BeginStoryboard Storyboard="{StaticResource NextImageAnimation}"/>
        </EventTrigger>
    </Window.Triggers>

    <Grid>
        <Grid>

            <!-- Launcher blur on unfocus -->
            <Grid.Effect>
                <BlurEffect x:Name="launcherBlur"
                            Radius="0"
                            KernelType="Gaussian"/>
            </Grid.Effect>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="25*"/>
                <RowDefinition Height="116*"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>

            <!-- Grid for logo and exit button & other -->
            <Grid MouseLeftButtonDown="MoveWindow"
                  Background="#FF2A2A32">
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Logo -->
                <DockPanel>
                    <Image Width="220"
                           Margin="35,20,0,12"
                           HorizontalAlignment="Left"
                           RenderOptions.BitmapScalingMode="Fant"
                           Source="..\Resources\H1EmuLogo.png"/>
                </DockPanel>

                <!-- Exit/minimise buttons and other info -->
                <DockPanel Grid.Column="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Wraps the about project informational -->
                        <WrapPanel Grid.ColumnSpan="2"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right">

                            <!-- Language selection combobox -->
                            <Grid>
                                <ComboBox x:Name="LangBox"
                                          Height="30"
                                          Margin="10,10,20,0"
                                          Padding="35,2,10,0"
                                          VerticalAlignment="Bottom"
                                          VerticalContentAlignment="Center"
                                          BorderThickness="2"
                                          Foreground="White"
                                          FontSize="15"
                                          FontWeight="Light"
                                          SelectedIndex="-1"
                                          SelectionChanged="LanguageSelectionChanged"
                                          Style="{DynamicResource ComboBox}">
                                    
                                    <ComboBoxItem Content="English"/>
                                    <ComboBoxItem Content="Chinese"/>
                                    <ComboBoxItem Content="Croatian"/>
                                    <ComboBoxItem Content="French"/>
                                    <ComboBoxItem Content="Turkish"/>
                                    <ComboBoxItem Content="Polish"/>
                                    <ComboBoxItem Content="Russian"/>
                                    <ComboBoxItem Content="Dutch"/>
                                    <ComboBoxItem Content="Bulgarian"/>
                                    <ComboBoxItem Content="German"/>
                                    <ComboBoxItem Content="Portuguese"/>
                                    <ComboBoxItem Content="Spanish"/>
                                </ComboBox>

                                <Image Source="..\Resources\Language.png"
                                       RenderOptions.BitmapScalingMode="Fant"
                                       Width="16"
                                       VerticalAlignment="Bottom"
                                       HorizontalAlignment="Left"
                                       Margin="21,0,0,7"
                                       IsHitTestVisible="False"/>
                                
                            </Grid>

                            <!-- Report A Bug Hyperlink -->
                            <TextBlock Margin="0,10,20,0"
                                       VerticalAlignment="Center"
                                       FontWeight="Light">
                                
                                <Hyperlink Click="ReportBuglink"
                                           Foreground="White">
                                    
                                    <TextBlock Text="{DynamicResource item173}"
                                               Style="{DynamicResource HyperLinkStyle}"/>
                                </Hyperlink>
                            </TextBlock>
                            
                            <!-- About Project Hyperlink -->
                            <TextBlock Margin="0,10,20,0"
                                       VerticalAlignment="Center"
                                       FontWeight="Light">
                                
                                <Hyperlink Click="AboutHyperlink"
                                           Foreground="White">
                                    
                                    <TextBlock Text="{DynamicResource item65}"
                                               Style="{DynamicResource HyperLinkStyle}"/>
                                </Hyperlink>
                            </TextBlock>

                            <!-- Minimise Button-->
                            <Button x:Name="MiniButton"
                                    Click="MinimiseButtonClick"
                                    Width="45"
                                    Height="30"
                                    Margin="0,10,4,0"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Right"
                                    BorderThickness="0"
                                    Style="{DynamicResource MinimiseButtonStyle}">
                                
                                <Button.Background>
                                    <ImageBrush ImageSource="/Resources/Minimise.png"/>
                                </Button.Background>
                            </Button>

                            <!-- Exit button -->
                            <Button x:Name="ExitButton"
                                    Click="CloseLauncher"
                                    RenderOptions.BitmapScalingMode="Fant"
                                    Width="45"
                                    Height="30"
                                    Margin="0,10,35,0"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Right"
                                    BorderThickness="0"
                                    Style="{DynamicResource CloseButtonStyle}">
                                
                                <Button.Background>
                                    <ImageBrush ImageSource="/Resources/Exit.png"/>
                                </Button.Background>
                            </Button>
                        </WrapPanel>

                        <!-- Website and discord components -->
                        <WrapPanel Grid.Row="1"
                                   Grid.ColumnSpan="2"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Bottom">
                            
                            <!-- Join the community at message -->
                            <TextBlock Foreground="White"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right"
                                       Margin="0,0,25,10"
                                       FontWeight="Light">
                                
                                <TextBlock Text="{DynamicResource item12}"/>

                                <Hyperlink NavigateUri="https://h1emu.com/"
                                           RequestNavigate="H1Hyperlink"
                                           Foreground="White">
                                    
                                    <TextBlock Text="h1emu.com"
                                               Style="{DynamicResource HyperLinkStyle}"/>
                                    
                                </Hyperlink>
                                    
                                    <!-- Context menu to copy link -->
                                    <TextBlock.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem
                                            Header="Copy"
                                            Click="websiteLinkCopy"
                                            Style="{DynamicResource PopupMenuItem}"/>

                                        </ContextMenu>
                                    </TextBlock.ContextMenu>
                            </TextBlock>

                            <Button x:Name="discordLink"
                                    Grid.Column="1"
                                    Click="OpenDiscord"
                                    RenderOptions.BitmapScalingMode="Fant"
                                    Width="160"
                                    Height="44"
                                    Margin="0,0,35,5"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Right"
                                    BorderThickness="0"
                                    Style="{DynamicResource DiscordButton}">
                                
                                <Button.Background>
                                    <ImageBrush ImageSource="..\Resources\Discord.png"/>
                                </Button.Background>

                                <Button.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="Copy"
                                                  Click="discordLinkCopy"
                                                  Style="{DynamicResource PopupMenuItem}"/>
                                        
                                    </ContextMenu>
                                </Button.ContextMenu>
                            </Button>
                        </WrapPanel>
                    </Grid>
                </DockPanel>
            </Grid>

            <!-- Main content in darkened area -->
            <Border Grid.Row="1"
                    Margin="35,10,35,0"
                    UseLayoutRounding="True"
                    Background="#1C1B22"
                    CornerRadius="5">

                <!-- Drop shadow effect -->
                <Border.Effect>
                    <DropShadowEffect BlurRadius="15"
                                      Direction="-90"
                                      RenderingBias="Quality"
                                      ShadowDepth="1"/>
                    
                </Border.Effect>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*"/>
                    </Grid.RowDefinitions>

                    <!-- This grid splits the left side in half -->
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="197*"/>
                            <RowDefinition Height="370*"/>
                        </Grid.RowDefinitions>

                        <!-- Grid to dock the game image -->
                        <Grid Grid.Row="1"
                              Margin="30,27,12,25">

                            <!-- Image carousel grid -->
                            <Grid x:Name="imageCarousel"
                                  MouseEnter="CarouselMouseEnter"
                                  MouseLeave="CarouselMouseLeave"
                                  ClipToBounds="True">

                                <Image x:Name="carouselImageSlider"
                                       RenderOptions.BitmapScalingMode="Fant">

                                    <Image.RenderTransform>
                                        <TransformGroup>
                                            <ScaleTransform/>
                                            <SkewTransform/>
                                            <RotateTransform/>
                                            <TranslateTransform/>
                                        </TransformGroup>
                                    </Image.RenderTransform>
                                </Image>

                                <Image x:Name="carouselImage"
                                       RenderOptions.BitmapScalingMode="Fant">

                                    <Image.RenderTransform>
                                        <TransformGroup>
                                            <ScaleTransform/>
                                            <SkewTransform/>
                                            <RotateTransform/>
                                            <TranslateTransform/>
                                        </TransformGroup>
                                    </Image.RenderTransform>
                                </Image>

                                <!-- Next image button -->
                                <Button x:Name="nextImage"
                                        Click="NextImageClick"
                                        Width="30"
                                        HorizontalAlignment="Right"
                                        BorderThickness="0"
                                        Foreground="White"
                                        Visibility="Hidden"
                                        Style="{DynamicResource CarouselButtonNext}"/>

                                <!-- Trigger next image storyboard -->
                                <Button x:Name="triggerNextImageStoryboard"
                                        Click="StoryboardNextImageClick"
                                        Width="30"
                                        HorizontalAlignment="Right"
                                        Visibility="Hidden"/>

                                <!-- Previous image button -->
                                <Button x:Name="prevImage"
                                        Click="PrevImageClick"
                                        Width="30"
                                        HorizontalAlignment="Left"
                                        BorderThickness="0"
                                        Foreground="White"
                                        Visibility="Hidden"
                                        Style="{DynamicResource CarouselButtonPrevious}"/>

                                <!-- Trigger previous image storyboard -->
                                <Button x:Name="triggerPrevImageStoryboard"
                                        Click="StoryboardPrevImageClick"
                                        Width="30"
                                        HorizontalAlignment="Right"
                                        Visibility="Hidden"/>

                                <!-- Image carousel progress bar -->
                                <ProgressBar x:Name="carouselProgressBar"
                                             Height="5"
                                             VerticalAlignment="Bottom"
                                             BorderThickness="0"
                                             Background="Transparent"
                                             Foreground="#DB111C"
                                             Maximum="3000"/>
                            </Grid>
                        </Grid>
                    </Grid>

                    <!-- Update version information -->
                    <StackPanel Margin="25,10,12,0">
                        <RichTextBox x:Name="titleUpdate"
                                     Background="Transparent"
                                     Foreground="White"
                                     BorderThickness="0"
                                     IsReadOnly="True"
                                     Cursor="Arrow">

                            <FlowDocument>
                                <Paragraph FontSize="32"
                                           FontWeight="Bold"
                                           FontFamily="{DynamicResource Signika}">

                                    <!-- Version text -->
                                    <Run x:Name="titleUpdateText"
                                         Foreground="#FFED1C24"
                                         FontSize="44"
                                         Text="{DynamicResource item3}"/>

                                    <!-- Update version number -->
                                    <Run x:Name="updateVersion"
                                         Foreground="#FFED1C24"
                                         FontSize="44"/>

                                    <!-- Date version was published -->
                                    <Run x:Name="datePublished"
                                         FontFamily="Bahnschrift Light"
                                         FontSize="16"/>

                                </Paragraph>
                            </FlowDocument>
                        </RichTextBox>

                        <!-- To allow scrolling on touch device -->
                        <ScrollViewer PanningMode="Both"
                                  VerticalScrollBarVisibility="Hidden">

                            <!-- Patch notes textbox -->
                            <RichTextBox x:Name="patchNotesBox"
                                         Height="96"
                                         Margin="0,10,0,0"
                                         Background="Transparent"
                                         Foreground="White"
                                         FontWeight="Light"
                                         BorderThickness="0"
                                         IsReadOnly="True"
                                         Cursor="Arrow"/>

                        </ScrollViewer>

                        <!-- Read full details of update hyperlink -->
                        <TextBlock Margin="6,22,0,0"
                                   FontWeight="Light">
                            
                            <Hyperlink NavigateUri="https://www.h1emu.com/us/changelog/"
                                       RequestNavigate="FullUpdatesHyperlink"
                                       Foreground="White">
                            
                                <TextBlock Text="{DynamicResource item61}"
                                           Style="{DynamicResource HyperLinkStyle}"/>
                            </Hyperlink>
                        
                            <!-- Context menu to copy link -->
                            <TextBlock.ContextMenu>
                                <ContextMenu>
                                    <MenuItem
                                        Header="Copy"
                                        Click="patchNotesCopy"
                                        Style="{DynamicResource PopupMenuItem}"/>
                                
                                </ContextMenu>
                            </TextBlock.ContextMenu>
                        </TextBlock>
                    </StackPanel>

                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="220*"/>
                            <RowDefinition Height="338*"/>
                        </Grid.RowDefinitions>

                        <!-- You must own the game in order to download message -->
                        <StackPanel Margin="12,20,30,0">
                            <TextBlock Background="Transparent"
                                       Foreground="White"
                                       FontWeight="Light"
                                       Cursor="Arrow"
                                       TextWrapping="Wrap">

                                <Run Foreground="#FFCA1420"
                                     Text="{DynamicResource item10}"/>                               
                                <Run Text="{DynamicResource item11}"/>
                                <LineBreak/>
                                <LineBreak/>
                                <Run Text="{DynamicResource item50}"/>
                                
                            </TextBlock>

                            <!-- H1Emu Chinese Community link -->
                            <TextBlock Margin="6,46,0,0"
                                       x:Name="chineseLink"
                                       Visibility="Collapsed"
                                       FontFamily="Bahnschrift"
                                       Text="点击进入 "
                                       Foreground="White"
                                       FontWeight="Bold">
                            
                                <Hyperlink NavigateUri="https://azaz.ge/"
                                           RequestNavigate="H1EmuChineseLink"
                                           Foreground="White">
                            
                                    <TextBlock Text="H1Emu中文社区"
                                               Style="{DynamicResource HyperLinkStyle}"
                                               FontWeight="Bold"/>
                                </Hyperlink>
                            
                            <TextBlock Text="，了解更多中文信息。"
                                       FontWeight="Bold"/>

                                <!-- Context menu to copy link -->
                                <TextBlock.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem
                                            Header="Copy"
                                            Click="chineseLinkCopy"
                                            Style="{DynamicResource PopupMenuItem}"/>
                                
                                    </ContextMenu>
                                </TextBlock.ContextMenu>  
                            </TextBlock>
                        </StackPanel>

                        <!-- Grid that hosts Steam frame, server selector and play button -->
                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="140"/>
                            </Grid.RowDefinitions>

                            <!-- Steam frame -->
                            <Frame x:Name="steamFramePanel"
                                   Margin="20,0,30,0"
                                   VerticalAlignment="Top"
                                   Source="..\\SteamFrame\Login.xaml"
                                   NavigationUIVisibility="Hidden"
                                   VerticalContentAlignment="Top"
                                   Padding="0" Height="140"
                                   f:DisableFrameNavigation.Disable="True"/>
                        </Grid>

                        <Grid Grid.Row="1"
                              Margin="12,0,30,25">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Divider -->
                            <Border Height="1"
                                    Background="#FFCA1420"
                                    VerticalAlignment="Bottom"
                                    Margin="7,0,0,75"
                                    CornerRadius="20"
                                    Grid.ColumnSpan="2"
                                    RenderOptions.BitmapScalingMode="Fant">

                                <!-- Drop shadow effect -->
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="8"
                                                      Direction="-90"
                                                      RenderingBias="Quality"
                                                      ShadowDepth="1"/>

                                </Border.Effect>
                            </Border>

                            <!-- Server selector combobox -->
                            <ComboBox x:Name="serverSelector"
                                      Height="35"
                                      Margin="7,0,3,5"
                                      Padding="38,8,15,0"
                                      VerticalAlignment="Bottom"
                                      Foreground="White"
                                      FontWeight="Light"
                                      BorderThickness="2"
                                      SelectionChanged="ServerSelectorChanged"
                                      Style="{DynamicResource ComboBox}">

                                <ComboBoxItem Content="{DynamicResource item139}"/>
                                <ComboBoxItem Content="{DynamicResource item140}"/>
                                <Separator/>
                                <ComboBoxItem x:Name="newServer"
                                              Content="{DynamicResource item141}"
                                              PreviewMouseLeftButtonDown="AddNewServer"/>
                            </ComboBox>

                            <!-- Delete selected server button -->
                            <Button Click="DeleteServer"
                                    RenderOptions.BitmapScalingMode="Fant"
                                    Width="20"
                                    Height="20"
                                    Margin="17,0,0,13"
                                    VerticalAlignment="Bottom"
                                    HorizontalAlignment="Left"
                                    BorderThickness="0"
                                    Style="{DynamicResource DeleteServer}">

                                <Button.Background>
                                    <ImageBrush ImageSource="..\Resources\Server.png"/>
                                </Button.Background>
                            </Button>

                            <!-- Play button -->
                            <Button x:Name="playButton"
                                    Grid.Column="1"
                                    Click="LaunchClient"
                                    RenderOptions.BitmapScalingMode="Fant"
                                    Height="45"
                                    Margin="12,0,0,0"
                                    VerticalAlignment="Bottom"
                                    Foreground="White"
                                    FontFamily="Arial Black"
                                    FontSize="28"
                                    BorderThickness="0"
                                    Content="{DynamicResource item8}"
                                    Style="{DynamicResource StandardButton}">

                                <Button.Background>
                                    <ImageBrush ImageSource="..\Resources\StandardButton.png"/>
                                </Button.Background>
                            </Button>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>

            <!-- Footer -->
            <DockPanel Grid.Row="2">

                <!-- Settings icon -->
                <Image Source="..\Resources\Settings.png"
                       RenderOptions.BitmapScalingMode="Fant"
                       Width="18"
                       Margin="35,0,0,0"
                       VerticalAlignment="Center"
                       RenderTransformOrigin=".5,.5">

                    <Image.RenderTransform>
                        <RotateTransform x:Name="rotateSettingsIcon" Angle="0"/>
                    </Image.RenderTransform>
                </Image>

                <!-- Hyperlink to open settings menu -->
                <TextBlock Margin="8,2,0,0"
                           VerticalAlignment="Center"
                           FontWeight="Light">
                    
                    <!-- Hyperlink for settings window -->
                    <Hyperlink Click="Hyperlink_Click"
                               Foreground="White">
                        
                        <TextBlock Text="{DynamicResource item62}"
                                   Style="{DynamicResource HyperLinkStyle}">
                            
                            <TextBlock.Triggers>
                                <EventTrigger RoutedEvent="MouseEnter">
                                    <BeginStoryboard x:Name="beginSettingsIconRotation">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="rotateSettingsIcon"
                                                             Storyboard.TargetProperty="Angle"
                                                             By="10"
                                                             To="90"
                                                             Duration="0:0:0.5"
                                                             FillBehavior="Stop"
                                                             RepeatBehavior="Forever"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="MouseLeave">
                                    <StopStoryboard BeginStoryboardName="beginSettingsIconRotation"/>
                                </EventTrigger>
                            </TextBlock.Triggers>
                        </TextBlock>
                    </Hyperlink>
                </TextBlock>

                <!-- Copyright notice -->
                <TextBlock Margin="0,2,35,0"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"
                           Foreground="White"
                           FontWeight="Light"
                           Text="{DynamicResource item125}"/>
            </DockPanel>
        </Grid>

        <!-- Background fade on unfocus -->
        <Rectangle x:Name="launcherFade"
                   Fill="#40000000"
                   IsHitTestVisible="False"
                   Visibility="Hidden"/>

    </Grid>
</Window>