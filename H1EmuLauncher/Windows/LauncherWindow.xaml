<Window x:Class="H1EmuLauncher.LauncherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:f="clr-namespace:H1EmuLauncher.Classes"
        mc:Ignorable="d"
        UseLayoutRounding="True"
        Title="H1Emu Launcher"
        x:Name="Launcher"
        Width="1300"
        Height="750"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize"
        FontFamily="Bahnschrift Light"
        FontSize="16"
        Foreground="FloralWhite"
        Background="Transparent"
        Loaded="LauncherWindowLoaded"
        ContentRendered="LauncherWindowContentRendered">

    <!-- Keep window animations -->
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0" CornerRadius="0" CaptionHeight="0" UseAeroCaptionButtons="False" ResizeBorderThickness="7"/>
    </WindowChrome.WindowChrome>

    <!-- Image carousel storyboard animations -->
    <Window.Resources>
        <ResourceDictionary>
            <Storyboard x:Key="CarouselNextImageAnimation"
                        Completed="StoryboardCompleted">
                <DoubleAnimation Storyboard.TargetName="carouselImageTranslate"
                                 Storyboard.TargetProperty="(TranslateTransform.X)"
                                 From="0" To="-573"
                                 Duration="0:0:1"
                                 AccelerationRatio="0.2"
                                 DecelerationRatio="0.8">
                    
                </DoubleAnimation>
            </Storyboard>
            <Storyboard x:Key="CarouselNextImageAnimationFollow"
                        Completed="StoryboardCompleted">

                <DoubleAnimation Storyboard.TargetName="carouselImageFollowTranslate"
                                 Storyboard.TargetProperty="(TranslateTransform.X)"
                                 From="573" To="0"
                                 Duration="0:0:1"
                                 AccelerationRatio="0.2"
                                 DecelerationRatio="0.8">
                    
                </DoubleAnimation>
            </Storyboard>
            <Storyboard x:Key="CarouselPrevImageAnimation"
                        Completed="StoryboardCompleted">

                <DoubleAnimation Storyboard.TargetName="carouselImageTranslate"
                                 Storyboard.TargetProperty="(TranslateTransform.X)"
                                 From="0" To="573"
                                 Duration="0:0:1"
                                 AccelerationRatio="0.2"
                                 DecelerationRatio="0.8">
                    
                </DoubleAnimation>
            </Storyboard>
            <Storyboard x:Key="CarouselPrevImageAnimationFollow"
                        Completed="StoryboardCompleted">

                <DoubleAnimation Storyboard.TargetName="carouselImageFollowTranslate"
                                 Storyboard.TargetProperty="(TranslateTransform.X)"
                                 From="-573" To="0"
                                 Duration="0:0:1"
                                 AccelerationRatio="0.2"
                                 DecelerationRatio="0.8">
                    
                </DoubleAnimation>
            </Storyboard>

            <Storyboard x:Key="UnfocusPropertiesShow">
                <DoubleAnimation Storyboard.TargetName="launcherFade"
                                 Storyboard.TargetProperty="Opacity"
                                 From="0" To="1"
                                 Duration="0:0:0.1"
                                 AccelerationRatio="1"/>

                <DoubleAnimation Storyboard.TargetName="launcherBlur"
                                 Storyboard.TargetProperty="Radius"
                                 From="0" To="15"
                                 Duration="0:0:0.1"
                                 AccelerationRatio="1"/>
            </Storyboard>
            <Storyboard x:Key="UnfocusPropertiesHide">
                <DoubleAnimation Storyboard.TargetName="launcherFade"
                                 Storyboard.TargetProperty="Opacity"
                                 From="1" To="0"
                                 Duration="0:0:0.1"
                                 AccelerationRatio="1"/>

                <DoubleAnimation Storyboard.TargetName="launcherBlur"
                                 Storyboard.TargetProperty="Radius"
                                 From="15" To="0"
                                 Duration="0:0:0.1"
                                 AccelerationRatio="1"/>
            </Storyboard>

            <!-- Load dictionary into xaml resources just so we can see on the designer -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="..\Language\StringResources.en-EN.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <!-- Tasbar icon info -->
    <Window.TaskbarItemInfo>
        <TaskbarItemInfo x:Name="taskbarIcon" Description="H1Emu Launcher"/>
    </Window.TaskbarItemInfo>

    <!-- Window grid -->
    <Grid Background="#FF2A2A32">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <!-- Grainy texture -->
            <Grid.Background>
                <ImageBrush ImageSource="..\Resources\Grain.png" Opacity="0.5" TileMode="Tile" ViewportUnits="Absolute" Viewport="0,0,512,512"/>
            </Grid.Background>

            <!-- Launcher blur on unfocus -->
            <Grid.Effect>
                <BlurEffect x:Name="launcherBlur"
                            Radius="0"
                            KernelType="Gaussian"/>
            </Grid.Effect>

            <!-- Grid for logo and exit button & other -->
            <Grid MouseLeftButtonDown="MoveWindow"
                  Background="Transparent">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo -->
                <Image Source="..\Resources\H1EmuLogo.png"
                       Stretch="Uniform"
                       Height="108"
                       Margin="35,25,35,20"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left">

                    <Image.Effect>
                        <DropShadowEffect BlurRadius="15"
                                          Direction="-90"
                                          RenderingBias="Quality"
                                          ShadowDepth="0"
                                          Opacity="0.3"/>
                    </Image.Effect>
                </Image>

                <!-- Exit/minimise buttons and other info -->
                <Grid Grid.Column="2">
                    
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <!-- Application actions -->
                    <StackPanel VerticalAlignment="Top"
                                HorizontalAlignment="Right"
                                Margin="35,25,35,10"
                                Orientation="Horizontal">

                        <!-- Minimise to system tray button-->
                        <Button x:Name="MinimiseToSystemTrayButton"
                                Click="MinimiseToSystemTrayButtonClick"
                                RenderOptions.BitmapScalingMode="Fant"
                                Width="45"
                                Height="30"
                                Margin="0,0,4,0"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Right"
                                BorderThickness="0"
                                Style="{DynamicResource MinimiseToSystemTrayButtonStyle}">

                            <Button.Effect>
                                <DropShadowEffect BlurRadius="15"
                                                  Direction="-90"
                                                  RenderingBias="Quality"
                                                  ShadowDepth="0"
                                                  Opacity="0.3"/>
                            </Button.Effect>
                        </Button>

                        <!-- Minimise button-->
                        <Button x:Name="MinimiseButton"
                                Click="MinimiseButtonClick"
                                Width="45"
                                Height="30"
                                Margin="0,0,4,0"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Right"
                                BorderThickness="0"
                                Style="{DynamicResource MinimiseButtonStyle}">

                            <Button.Effect>
                                <DropShadowEffect BlurRadius="15"
                                                      Direction="-90"
                                                      RenderingBias="Quality"
                                                      ShadowDepth="0"
                                                      Opacity="0.3"/>
                            </Button.Effect>
                        </Button>

                        <!-- Exit button -->
                        <Button x:Name="ExitButton"
                                Click="CloseLauncher"
                                RenderOptions.BitmapScalingMode="Fant"
                                Width="45"
                                Height="30"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Right"
                                BorderThickness="0"
                                Style="{DynamicResource CloseButtonStyle}">

                            <Button.Effect>
                                <DropShadowEffect BlurRadius="15"
                                                  Direction="-90"
                                                  RenderingBias="Quality"
                                                  ShadowDepth="0"
                                                  Opacity="0.3"/>
                            </Button.Effect>
                        </Button>
                    </StackPanel>

                    <!-- Website and discord components -->
                    <StackPanel Grid.Row="1"
                                Orientation="Horizontal"
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Right"
                                Margin="35,10,35,20">

                        <!-- Join the community message -->
                        <TextBlock VerticalAlignment="Center"
                                   HorizontalAlignment="Right"
                                   Margin="0,0,25,0"
                                   FontWeight="Light">

                            <TextBlock.Effect>
                                <DropShadowEffect BlurRadius="15"
                                                  Direction="-90"
                                                  RenderingBias="Quality"
                                                  ShadowDepth="0"
                                                  Opacity="0.3"/>
                            </TextBlock.Effect>
                            
                            <TextBlock Text="{DynamicResource item12}"/>

                            <Hyperlink NavigateUri="https://h1emu.com/"
                                       RequestNavigate="H1Hyperlink"
                                       Foreground="FloralWhite">
                                    
                                <TextBlock Text="h1emu.com"
                                           Style="{DynamicResource HyperLinkStyle}"/>
                                    
                            </Hyperlink>
                            
                            <!-- Context menu to copy link -->
                            <TextBlock.ContextMenu>
                                <ContextMenu Style="{DynamicResource ContextMenuStyle}">
                                    <MenuItem Click="websiteLinkCopy"
                                              Header="{DynamicResource item193}"
                                              Style="{DynamicResource CustomMenuItem}">
                                        
                                        <MenuItem.Icon>
                                            <Image Source="..\Resources\Copy.png" RenderOptions.BitmapScalingMode="Fant"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                </ContextMenu>
                            </TextBlock.ContextMenu>
                        </TextBlock>

                        <Button x:Name="discordLink"
                                Grid.Column="1"
                                Click="OpenDiscord"
                                RenderOptions.BitmapScalingMode="Fant"
                                Width="160"
                                Height="44"
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Right"
                                BorderThickness="0"
                                Style="{DynamicResource DiscordButton}">

                            <Button.Effect>
                                <DropShadowEffect BlurRadius="15"
                                                  Direction="-90"
                                                  RenderingBias="Quality"
                                                  ShadowDepth="0"
                                                  Opacity="0.3"/>
                            </Button.Effect>

                            <!-- Context menu to copy link -->
                            <Button.ContextMenu>
                                <ContextMenu Style="{DynamicResource ContextMenuStyle}">
                                    <MenuItem Click="discordLinkCopy"
                                              Header="{DynamicResource item193}"
                                              Style="{DynamicResource CustomMenuItem}">

                                        <MenuItem.Icon>
                                            <Image Source="..\Resources\Copy.png" RenderOptions.BitmapScalingMode="Fant"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                </ContextMenu>
                            </Button.ContextMenu>
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>

            <!-- Main content in darkened area -->
            <Border Grid.Row="1"
                    Margin="35,0,35,0"
                    UseLayoutRounding="True"
                    Background="#1C1B22"
                    CornerRadius="5">

                <!-- Drop shadow effect -->
                <Border.Effect>
                    <DropShadowEffect BlurRadius="15"
                                      Direction="-90"
                                      RenderingBias="Quality"
                                      ShadowDepth="1"/>

                </Border.Effect>

                <!-- Border for grainy texture -->
                <Border CornerRadius="5">

                    <!-- Grainy texture -->
                    <Border.Background>
                        <ImageBrush ImageSource="..\Resources\Grain.png" Opacity="0.5" TileMode="Tile" ViewportUnits="Absolute" Viewport="0,0,512,512"/>
                    </Border.Background>

                    <!-- Grid to split main content in half vertically-->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="10"/>
                        </Grid.RowDefinitions>

                        <!-- Grid for patch notes -->
                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Margin="30,0,10,0"
                                       Background="Transparent"
                                       Cursor="Arrow">

                                <!-- Version text -->
                                <Run Foreground="#FFED1C24"
                                     FontFamily="{DynamicResource Signika}"
                                     FontSize="44"
                                     FontWeight="Bold"
                                     Text="{DynamicResource item3}"/>

                                <!-- Update version number -->
                                <Run x:Name="updateVersion"
                                     Foreground="#FFED1C24"
                                     FontFamily="{DynamicResource Signika}"
                                     FontSize="44"
                                     FontWeight="Bold"/>

                                <!-- Date version was published -->
                                <Run x:Name="datePublished"
                                     FontFamily="Bahnschrift Light"/>
                            </TextBlock>

                            <!-- Patch notes textbox -->
                            <ScrollViewer Grid.Row="1"
                                          Margin="30,0,10,0"
                                          VerticalScrollBarVisibility="Hidden">

                                <TextBlock x:Name="patchNotesBox"
                                           Margin="0,10,0,0"
                                           Background="Transparent"
                                           Foreground="FloralWhite"
                                           FontWeight="Light"
                                           Cursor="Arrow"
                                           TextWrapping="Wrap"/>

                            </ScrollViewer>

                            <!-- Read full details of update hyperlink -->
                            <TextBlock Grid.Row="2"
                                       Margin="30,10,10,15">
    
                                <Hyperlink NavigateUri="https://www.h1emu.com/us/changelog/"
                                           RequestNavigate="FullUpdatesHyperlink"
                                           Foreground="FloralWhite">
    
                                    <TextBlock Text="{DynamicResource item61}"
                                               Style="{DynamicResource HyperLinkStyle}"/>
                                </Hyperlink>

                                <!-- Context menu to copy link -->
                                <TextBlock.ContextMenu>
                                    <ContextMenu Style="{DynamicResource ContextMenuStyle}">
                                        <MenuItem Click="patchNotesCopy"
                                                  Header="{DynamicResource item193}"
                                                  Style="{DynamicResource CustomMenuItem}">
                                            
                                            <MenuItem.Icon>
                                                <Image Source="..\Resources\Copy.png" RenderOptions.BitmapScalingMode="Fant"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                    </ContextMenu>
                                </TextBlock.ContextMenu>
                            </TextBlock>
                        </Grid>

                        <!-- Grid to split left panel in half horizontally -->
                        <Grid Grid.Row="2">
                            <!-- Grid to dock the game image -->
                            <Grid Grid.Row="1"
                                  Margin="30,0,10,20">

                                <Grid.Background>
                                    <ImageBrush ImageSource="..\Resources\Placeholder.jpg"/>
                                </Grid.Background>

                                <!-- Drop shadow effect -->
                                <Grid.Effect>
                                    <DropShadowEffect BlurRadius="15"
                                                      Direction="-90"
                                                      RenderingBias="Quality"
                                                      ShadowDepth="1"
                                                      Opacity="0.3"/>

                                </Grid.Effect>

                                <!-- Image carousel grid -->
                                <Grid x:Name="imageCarousel"
                                      ClipToBounds="True"
                                      MouseEnter="CarouselMouseEnter"
                                      MouseLeave="CarouselMouseLeave">

                                    <Image x:Name="carouselImage"
                                           Source="..\Resources\2.jpg"
                                           Stretch="Fill"
                                           RenderOptions.BitmapScalingMode="Fant">

                                        <Image.RenderTransform>
                                            <TranslateTransform x:Name="carouselImageTranslate"/>
                                        </Image.RenderTransform>
                                    </Image>

                                    <Image x:Name="carouselImageFollow"
                                           Stretch="Fill"
                                           RenderOptions.BitmapScalingMode="Fant">

                                        <Image.RenderTransform>
                                            <TranslateTransform x:Name="carouselImageFollowTranslate"/>
                                        </Image.RenderTransform>
                                    </Image>

                                    <!-- Next image button -->
                                    <Button x:Name="nextImage"
                                            Click="NextImageClick"
                                            Width="30"
                                            BorderThickness="0"
                                            HorizontalAlignment="Right"
                                            Visibility="Hidden"
                                            Style="{DynamicResource CarouselButtonNext}"/>

                                    <!-- Previous image button -->
                                    <Button x:Name="prevImage"
                                            Click="PrevImageClick"
                                            Width="30"
                                            BorderThickness="0"
                                            HorizontalAlignment="Left"
                                            Visibility="Hidden"
                                            Style="{DynamicResource CarouselButtonPrevious}"/>

                                    <!-- Grid for image carousel progress bar -->
                                    <Grid x:Name="carouselRectangleGrid"
                                          VerticalAlignment="Bottom">

                                        <!-- Fill space to get width -->
                                        <Rectangle Fill="Transparent"
                                                   Height="4"/>

                                        <!-- Image carousel progress bar -->
                                        <Rectangle x:Name="carouselRectangle"
                                                   Fill="#DB111C"
                                                   Height="4"
                                                   HorizontalAlignment="Left"/>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Grid>

                        <Grid Grid.Row="1"
                              Grid.Column="1">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="40"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Margin="10,0,30,0"
                                       Cursor="Arrow"
                                       TextWrapping="Wrap">

                                <Run Foreground="#FFCA1420"
                                     Text="{DynamicResource item10}"/>
        
                                <Run Text="{DynamicResource item11}"/>
        
                                <LineBreak/>
                                <LineBreak/>
        
                                <Run Text="{DynamicResource item50}"/>

                            </TextBlock>

                            <!-- H1Emu Chinese Community link -->
                            <TextBlock x:Name="chineseLink"
                                       Grid.Row="2"
                                       Margin="10,0,30,0"
                                       Visibility="Collapsed"
                                       FontFamily="Bahnschrift"
                                       Text="点击进入 "
                                       FontWeight="Bold">

                                <Hyperlink NavigateUri="https://azaz.ge/"
                                           RequestNavigate="H1EmuChineseLink"
                                           Foreground="White">

                                    <TextBlock Text="H1Emu中文社区"
                                               Style="{DynamicResource HyperLinkStyle}"
                                               FontWeight="Bold"/>
                                </Hyperlink>

                                <TextBlock Text="，了解更多中文信息。"
                                            FontWeight="Bold"/>

                                <!-- Context menu to copy link -->
                                <TextBlock.ContextMenu>
                                    <ContextMenu Style="{DynamicResource ContextMenuStyle}">
                                        <MenuItem Click="chineseLinkCopy"
                                                  Header="{DynamicResource item193}"
                                                  Style="{DynamicResource CustomMenuItem}">
                                            
                                            <MenuItem.Icon>
                                                <Image Source="..\Resources\Copy.png" RenderOptions.BitmapScalingMode="Fant"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                    </ContextMenu>
                                </TextBlock.ContextMenu>  
                            </TextBlock>
                        </Grid>

                        <!-- Grid that hosts Steam frame, divider, server selector and play button -->
                        <Grid Grid.Row="2"
                              Grid.Column="1">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>

                            <!-- Steam frame -->
                            <Frame x:Name="steamFramePanel"
                                   Margin="10,0,30,0"
                                   Height="140"
                                   VerticalAlignment="Top"
                                   Source="..\SteamFramePages\Login.xaml"
                                   NavigationUIVisibility="Hidden"
                                   f:DisableFrameNavigation.Disable="True"/>

                            <!-- Grid for divider, server selector and play button -->
                            <Grid Grid.Row="2"
                                  Margin="10,0,30,0">

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="10"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Divider -->
                                <Border Height="1"
                                        Background="#FFCA1420"
                                        VerticalAlignment="Top"
                                        Margin="10,0,10,0"
                                        CornerRadius="20"
                                        Grid.ColumnSpan="2"
                                        RenderOptions.BitmapScalingMode="Fant">

                                    <!-- Drop shadow effect -->
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="8"
                                                          Direction="-90"
                                                          RenderingBias="Quality"
                                                          ShadowDepth="1"/>

                                    </Border.Effect>
                                </Border>

                                <!-- Grid containing game directory and icons/buttons -->
                                <Grid Grid.ColumnSpan="2"
                                      Grid.Row="1">

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="15"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- Game directory textbox -->
                                    <TextBox x:Name="directoryBox"
                                             Grid.Column="1"
                                             Grid.Row="1"
                                             Height="35"
                                             Padding="32,7,32,0"
                                             IsReadOnly="True"
                                             Cursor="Arrow"
                                             Style="{DynamicResource TextBoxPrimaryStyle}">

                                        <TextBox.Effect>

                                            <!-- Drop shadow effect -->
                                            <DropShadowEffect BlurRadius="15"
                                                              Direction="-90"
                                                              RenderingBias="Quality"
                                                              ShadowDepth="1"
                                                              Opacity="0.3"/>
                                        </TextBox.Effect>
                                    </TextBox>

                                    <!-- Button to open file explorer to game directory -->
                                    <Button Grid.Column="1"
                                            Grid.Row="1"
                                            Click="OpenDirectory"
                                            RenderOptions.BitmapScalingMode="Fant"
                                            Width="18"
                                            Height="18"
                                            Margin="10,0,0,0"
                                            HorizontalAlignment="Left"
                                            BorderThickness="0"
                                            Style="{DynamicResource FolderButton}">

                                        <Button.Background>
                                            <ImageBrush ImageSource="..\Resources\Folder.png" Stretch="Uniform"/>
                                        </Button.Background>
                                    </Button>

                                    <!-- Button to select a new game directory -->
                                    <Button x:Name="directoryButton"
                                            Grid.Column="1"
                                            Grid.Row="1"
                                            Click="SelectDirectory"
                                            RenderOptions.BitmapScalingMode="Fant"
                                            Width="18"
                                            Height="18"
                                            Margin="0,0,10,0"
                                            HorizontalAlignment="Right"
                                            BorderThickness="0"
                                            Style="{DynamicResource EnterButton}">

                                        <Button.Background>
                                            <ImageBrush ImageSource="..\Resources\Arrow.png" Stretch="Uniform"/>
                                        </Button.Background>
                                    </Button>

                                    <!-- Current detected game version -->
                                    <TextBlock x:Name="currentGame"
                                               Grid.Row="3"
                                               Foreground="Gray"
                                               FontFamily="Bahnschrift"
                                               FontWeight="Bold"
                                               FontSize="15"
                                               HorizontalAlignment="Center"/>
                                </Grid>

                                <!-- Server selector combobox -->
                                <ComboBox x:Name="serverSelector"
                                          Grid.Row="3"
                                          Height="35"
                                          Margin="0,20,10,20"
                                          Padding="38,2,5,0"
                                          VerticalAlignment="Center"
                                          VerticalContentAlignment="Center"
                                          Foreground="FloralWhite"
                                          FontWeight="Light"
                                          BorderThickness="2"
                                          SelectedIndex="0"
                                          SelectionChanged="ServerSelectorChanged"
                                          PreviewMouseDown="ServerSelectorPreviewMouseDown"
                                          Style="{DynamicResource ComboBox}">


                                    <ComboBoxItem Content="{DynamicResource item139}"
                                                  Style="{DynamicResource ComboBoxItemStyle}"/>

                                    <ComboBoxItem Content="{DynamicResource item140}"
                                                  Style="{DynamicResource ComboBoxItemStyle}"/>

                                    <Separator Background="#444444"/>

                                    <ComboBoxItem x:Name="newServer"
                                                  Content="{DynamicResource item141}"
                                                  PreviewMouseLeftButtonUp="AddNewServer"
                                                  Style="{DynamicResource ComboBoxItemStyle}"/>

                                    <ComboBox.Effect>
                                        <DropShadowEffect BlurRadius="15"
                                                          Direction="-90"
                                                          RenderingBias="Quality"
                                                          ShadowDepth="0"
                                                          Opacity="0.3"/>
                                    </ComboBox.Effect>
                                </ComboBox>

                                <!-- Server selector icon -->
                                <Image Grid.Row="3"
                                       Source="..\Resources\Server.png"
                                       Stretch="Uniform"
                                       RenderOptions.BitmapScalingMode="Fant"
                                       Width="20"
                                       Height="20"
                                       Margin="10,0,0,1"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       IsHitTestVisible="False"/>

                                <!-- Play button -->
                                <Button x:Name="playButton"
                                        Grid.Row="3"
                                        Grid.Column="1"
                                        Click="LaunchClient"
                                        RenderOptions.BitmapScalingMode="Fant"
                                        Height="45"
                                        Margin="10,20,0,20"
                                        VerticalAlignment="Bottom"
                                        Foreground="FloralWhite"
                                        FontFamily="Arial Black"
                                        FontSize="28"
                                        BorderThickness="0"
                                        Content="{DynamicResource item8}"
                                        Style="{DynamicResource StandardButton}">

                                    <Button.Effect>
                                        <DropShadowEffect BlurRadius="15"
                                                          Direction="-90"
                                                          RenderingBias="Quality"
                                                          ShadowDepth="0"
                                                          Opacity="0.3"/>
                                    </Button.Effect>
                                </Button>
                            </Grid>
                        </Grid>
                    </Grid>
                </Border>
            </Border>

            <!-- Footer -->
            <Grid Grid.Row="2">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal"
                            Margin="35,15,35,15">
                    
                    <!-- Settings icon -->
                    <Image Source="..\Resources\Settings.png"
                           RenderOptions.BitmapScalingMode="Fant"
                           Width="18"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           RenderTransformOrigin="0.5, 0.5">

                        <Image.Effect>
                            <DropShadowEffect BlurRadius="15"
                                              Direction="-90"
                                              RenderingBias="Quality"
                                              ShadowDepth="0"
                                              Opacity="0.3"/>
                        </Image.Effect>

                        <Image.RenderTransform>
                            <RotateTransform x:Name="rotateSettingsIcon" Angle="0"/>
                        </Image.RenderTransform>
                    </Image>

                    <!-- Hyperlink to open settings menu -->
                    <TextBlock VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Margin="10,0,0,0">

                        <TextBlock.Effect>
                            <DropShadowEffect BlurRadius="15"
                                              Direction="-90"
                                              RenderingBias="Quality"
                                              ShadowDepth="0"
                                              Opacity="0.3"/>
                        </TextBlock.Effect>
    
                        <!-- Hyperlink for settings window -->
                        <Hyperlink Click="HyperlinkClick"
                                   Foreground="FloralWhite">
        
                            <TextBlock Text="{DynamicResource item62}"
                                       Style="{DynamicResource HyperLinkStyle}">

                                                    <TextBlock.Triggers>
                                                        <EventTrigger RoutedEvent="MouseEnter">
                                                            <BeginStoryboard x:Name="beginSettingsIconRotation">
                                                                <Storyboard>
                                                                    <DoubleAnimation Storyboard.TargetName="rotateSettingsIcon"
                                                                                     Storyboard.TargetProperty="Angle"
                                                                                     By="0"
                                                                                     To="90"
                                                                                     Duration="0:0:0.5"
                                                                                     FillBehavior="Stop"
                                                                                     RepeatBehavior="Forever"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </EventTrigger>
                                                        <EventTrigger RoutedEvent="MouseLeave">
                                                            <StopStoryboard BeginStoryboardName="beginSettingsIconRotation"/>
                                                        </EventTrigger>
                                                    </TextBlock.Triggers>
                            </TextBlock>
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>

                <!-- Copyright notice -->
                <TextBlock Grid.Column="2"
                           Margin="35,15,35,15"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"
                           Text="{DynamicResource item125}">

                    <TextBlock.Effect>
                        <DropShadowEffect BlurRadius="15"
                                          Direction="-90"
                                          RenderingBias="Quality"
                                          ShadowDepth="0"
                                          Opacity="0.3"/>
                    </TextBlock.Effect>
                </TextBlock>
            </Grid>
        </Grid>

        <!-- Background fade on unfocus -->
        <Rectangle x:Name="launcherFade"
                   MouseDown="LauncherFadeMouseDown"
                   Fill="#40000000"
                   IsHitTestVisible="False"
                   Opacity="0"/>

    </Grid>
</Window>