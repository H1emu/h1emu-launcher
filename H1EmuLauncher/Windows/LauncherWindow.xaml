<Window x:Class="H1EmuLauncher.LauncherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:f="clr-namespace:H1EmuLauncher.Classes"
        mc:Ignorable="d"
        UseLayoutRounding="True"
        Title="H1Emu Launcher"
        x:Name="Launcher"
        Width="1300"
        Height="750"
        FontFamily="Bahnschrift"
        FontSize="16"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        RenderTransformOrigin="0.5, 0.5"
        Background="Transparent"
        Loaded="LauncherWindowLoaded"
        ContentRendered="LauncherWindowContentRendered"
        Closing="LauncherClosing"
        StateChanged="LauncherStateChanged">

    <Window.RenderTransform>
        <ScaleTransform x:Name="WindowScaleTransform"/>
    </Window.RenderTransform>
    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <EventTrigger.Actions>
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="WindowScaleTransform"
                                         Storyboard.TargetProperty="(ScaleTransform.ScaleX)"
                                         From="0.9" To="1"
                                         Duration="0:0:0.1"
                                         AccelerationRatio="1"/>

                        <DoubleAnimation Storyboard.TargetName="WindowScaleTransform"
                                         Storyboard.TargetProperty="(ScaleTransform.ScaleY)"
                                         From="0.9" To="1"
                                         Duration="0:0:0.1"
                                         AccelerationRatio="1"/>

                        <DoubleAnimation Storyboard.TargetName="Launcher"
                                         Storyboard.TargetProperty="Opacity"
                                         From="0" To="1"
                                         Duration="0:0:0.1"
                                         AccelerationRatio="1"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger.Actions>
        </EventTrigger>
    </Window.Triggers>

    <!-- Image carousel storyboard animations -->
    <Window.Resources>
        <ResourceDictionary>
            <Storyboard x:Key="CarouselNextImageAnimation"
                        Completed="StoryboardCompleted">
                <DoubleAnimation Storyboard.TargetName="carouselImageTranslate"
                                 Storyboard.TargetProperty="(TranslateTransform.X)"
                                 From="0" To="-573"
                                 Duration="0:0:1"
                                 AccelerationRatio="0.2"
                                 DecelerationRatio="0.8">
                </DoubleAnimation>
            </Storyboard>
            <Storyboard x:Key="CarouselNextImageAnimationFollow"
                        Completed="StoryboardCompleted">

                <DoubleAnimation Storyboard.TargetName="carouselImageFollowTranslate"
                                 Storyboard.TargetProperty="(TranslateTransform.X)"
                                 From="573" To="0"
                                 Duration="0:0:1"
                                 AccelerationRatio="0.2"
                                 DecelerationRatio="0.8">
                </DoubleAnimation>
            </Storyboard>
            <Storyboard x:Key="CarouselPrevImageAnimation"
                        Completed="StoryboardCompleted">

                <DoubleAnimation Storyboard.TargetName="carouselImageTranslate"
                                 Storyboard.TargetProperty="(TranslateTransform.X)"
                                 From="0" To="573"
                                 Duration="0:0:1"
                                 AccelerationRatio="0.2"
                                 DecelerationRatio="0.8">
                </DoubleAnimation>
            </Storyboard>
            <Storyboard x:Key="CarouselPrevImageAnimationFollow"
                        Completed="StoryboardCompleted">

                <DoubleAnimation Storyboard.TargetName="carouselImageFollowTranslate"
                                 Storyboard.TargetProperty="(TranslateTransform.X)"
                                 From="-573" To="0"
                                 Duration="0:0:1"
                                 AccelerationRatio="0.2"
                                 DecelerationRatio="0.8">
                </DoubleAnimation>
            </Storyboard>

            <Storyboard x:Key="CloseLauncher">
                <DoubleAnimation Storyboard.TargetName="WindowScaleTransform"
                                 Storyboard.TargetProperty="(ScaleTransform.ScaleX)"
                                 From="1" To="0.9"
                                 Duration="0:0:0.1"
                                 AccelerationRatio="1"/>

                <DoubleAnimation Storyboard.TargetName="WindowScaleTransform"
                                 Storyboard.TargetProperty="(ScaleTransform.ScaleY)"
                                 From="1" To="0.9"
                                 Duration="0:0:0.1"
                                 AccelerationRatio="1"/>

                <DoubleAnimation Storyboard.TargetName="Launcher"
                                 Storyboard.TargetProperty="Opacity"
                                 From="1" To="0"
                                 Duration="0:0:0.1"
                                 AccelerationRatio="1"/>
            </Storyboard>
            <Storyboard x:Key="MinimiseLauncher">
                <DoubleAnimation Storyboard.TargetName="WindowScaleTransform"
                                 Storyboard.TargetProperty="(ScaleTransform.ScaleX)"
                                 From="1" To="0"
                                 Duration="0:0:0.1"
                                 AccelerationRatio="0.8"/>

                <DoubleAnimation Storyboard.TargetName="WindowScaleTransform"
                                 Storyboard.TargetProperty="(ScaleTransform.ScaleY)"
                                 From="1" To="0"
                                 Duration="0:0:0.1"
                                 AccelerationRatio="0.8"/>

                <DoubleAnimation Storyboard.TargetName="Launcher"
                                 Storyboard.TargetProperty="Opacity"
                                 From="1" To="0"
                                 Duration="0:0:0.1"
                                 AccelerationRatio="0.8"/>
            </Storyboard>
            <Storyboard x:Key="RestoreLauncher">
                <DoubleAnimation Storyboard.TargetName="WindowScaleTransform"
                                 Storyboard.TargetProperty="(ScaleTransform.ScaleX)"
                                 From="0" To="1"
                                 Duration="0:0:0.2"
                                 AccelerationRatio="0.8"/>

                <DoubleAnimation Storyboard.TargetName="WindowScaleTransform"
                                 Storyboard.TargetProperty="(ScaleTransform.ScaleY)"
                                 From="0" To="1"
                                 Duration="0:0:0.2"
                                 AccelerationRatio="0.8"/>

                <DoubleAnimation Storyboard.TargetName="Launcher"
                                 Storyboard.TargetProperty="Opacity"
                                 From="0" To="1"
                                 Duration="0:0:0.2"
                                 AccelerationRatio="0.8"/>
            </Storyboard>
            <Storyboard x:Key="UnfocusPropertiesShow">
                <DoubleAnimation Storyboard.TargetName="launcherFade"
                                 Storyboard.TargetProperty="Opacity"
                                 From="0" To="1"
                                 Duration="0:0:0.1"
                                 AccelerationRatio="1"/>

                <DoubleAnimation Storyboard.TargetName="launcherBlur"
                                 Storyboard.TargetProperty="Radius"
                                 From="0" To="15"
                                 Duration="0:0:0.1"
                                 AccelerationRatio="1"/>
            </Storyboard>
            <Storyboard x:Key="UnfocusPropertiesHide">
                <DoubleAnimation Storyboard.TargetName="launcherFade"
                                 Storyboard.TargetProperty="Opacity"
                                 From="1" To="0"
                                 Duration="0:0:0.1"
                                 AccelerationRatio="1"/>

                <DoubleAnimation Storyboard.TargetName="launcherBlur"
                                 Storyboard.TargetProperty="Radius"
                                 From="15" To="0"
                                 Duration="0:0:0.1"
                                 AccelerationRatio="1"/>
            </Storyboard>

            <!-- Load dictionary into xaml resources just so we can see on the designer -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="..\Language\StringResources.en-EN.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <!-- Tasbar icon info -->
    <Window.TaskbarItemInfo>
        <TaskbarItemInfo x:Name="taskbarIcon" Description="H1Emu Launcher"/>
    </Window.TaskbarItemInfo>

    <Grid Background="#FF2A2A32">
        <Grid>
            <!-- Grainy texture -->
            <Grid.Background>
                <ImageBrush ImageSource="..\Resources\Grain.png" Opacity="0.5" TileMode="Tile" ViewportUnits="Absolute" Viewport="0,0,512,512"/>
            </Grid.Background>

            <!-- Launcher blur on unfocus -->
            <Grid.Effect>
                <BlurEffect x:Name="launcherBlur"
                            Radius="0"
                            KernelType="Gaussian"/>
            </Grid.Effect>

            <Grid.RowDefinitions>
                <RowDefinition Height="140"/>
                <RowDefinition Height="116*"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>

            <!-- Grid for logo and exit button & other -->
            <Grid MouseLeftButtonDown="MoveWindow"
                  Background="Transparent">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Logo -->
                <Image Margin="35,20,0,25"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       RenderOptions.BitmapScalingMode="Fant"
                       Source="..\Resources\H1EmuLogo.png">

                    <Image.Effect>
                        <DropShadowEffect BlurRadius="15"
                                          Direction="-90"
                                          RenderingBias="Quality"
                                          ShadowDepth="0"
                                          Opacity="0.4"/>
                    </Image.Effect>
                </Image>

                <!-- Exit/minimise buttons and other info -->
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Wraps the about project informational -->
                    <StackPanel Grid.ColumnSpan="2"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Right"
                                Margin="0,20,35,0"
                                Orientation="Horizontal">

                        <!-- Language selection combobox -->
                        <Grid>
                            <ComboBox x:Name="LanguageBox"
                                      Height="30"
                                      Margin="0,0,20,0"
                                      Padding="35,2,10,0"
                                      VerticalAlignment="Top"
                                      VerticalContentAlignment="Center"
                                      BorderThickness="2"
                                      Foreground="White"
                                      FontSize="15"
                                      FontWeight="Light"
                                      SelectedIndex="0"
                                      SelectionChanged="LanguageSelectionChanged"
                                      Style="{DynamicResource ComboBox}">

                                <ComboBoxItem Content="English" Style="{DynamicResource ComboBoxItemStyle}"/>
                                <ComboBoxItem Content="Chinese" Style="{DynamicResource ComboBoxItemStyle}"/>
                                <ComboBoxItem Content="Croatian" Style="{DynamicResource ComboBoxItemStyle}"/>
                                <ComboBoxItem Content="French" Style="{DynamicResource ComboBoxItemStyle}"/>
                                <ComboBoxItem Content="Turkish" Style="{DynamicResource ComboBoxItemStyle}"/>
                                <ComboBoxItem Content="Polish" Style="{DynamicResource ComboBoxItemStyle}"/>
                                <ComboBoxItem Content="Russian" Style="{DynamicResource ComboBoxItemStyle}"/>
                                <ComboBoxItem Content="Dutch" Style="{DynamicResource ComboBoxItemStyle}"/>
                                <ComboBoxItem Content="Bulgarian" Style="{DynamicResource ComboBoxItemStyle}"/>
                                <ComboBoxItem Content="German" Style="{DynamicResource ComboBoxItemStyle}"/>
                                <ComboBoxItem Content="Portuguese" Style="{DynamicResource ComboBoxItemStyle}"/>
                                <ComboBoxItem Content="Spanish" Style="{DynamicResource ComboBoxItemStyle}"/>
                                <ComboBoxItem Content="Swedish" Style="{DynamicResource ComboBoxItemStyle}"/>

                                <ComboBox.Effect>
                                    <DropShadowEffect BlurRadius="15"
                                          Direction="-90"
                                          RenderingBias="Quality"
                                          ShadowDepth="0"
                                          Opacity="0.2"/>
                                </ComboBox.Effect>
                            </ComboBox>

                            <Image Source="..\Resources\Language.png"
                                       RenderOptions.BitmapScalingMode="Fant"
                                       Width="16"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       Margin="12,0,0,0"
                                       IsHitTestVisible="False"/>

                        </Grid>

                        <!-- Report A Bug Hyperlink -->
                        <TextBlock Margin="0,0,20,0"
                                   VerticalAlignment="Center"
                                   FontWeight="Light">
                                
                                <Hyperlink Click="ReportBuglink"
                                           Foreground="White">
                                    
                                    <TextBlock Text="{DynamicResource item173}"
                                               Style="{DynamicResource HyperLinkStyle}"/>
                                </Hyperlink>
                                
                                <TextBlock.Effect>
                                    <DropShadowEffect BlurRadius="15"
                                                      Direction="-90"
                                                      RenderingBias="Quality"
                                                      ShadowDepth="0"
                                                      Opacity="0.4"/>
                                </TextBlock.Effect>
                            </TextBlock>

                        <!-- About Project Hyperlink -->
                        <TextBlock Margin="0,0,20,0"
                                   VerticalAlignment="Center"
                                   FontWeight="Light">
                                
                                <Hyperlink Click="AboutHyperlink"
                                           Foreground="White">
                                    
                                    <TextBlock Text="{DynamicResource item65}"
                                               Style="{DynamicResource HyperLinkStyle}"/>
                                </Hyperlink>
                                
                                <TextBlock.Effect>
                                    <DropShadowEffect BlurRadius="15"
                                                      Direction="-90"
                                                      RenderingBias="Quality"
                                                      ShadowDepth="0"
                                                      Opacity="0.4"/>
                                </TextBlock.Effect>
                            </TextBlock>

                        <!-- Minimise to system tray button-->
                        <Button x:Name="MinimiseToSystemTrayButton"
                                Click="MinimiseToSystemTrayButtonClick"
                                RenderOptions.BitmapScalingMode="Fant"
                                Width="45"
                                Height="30"
                                Margin="0,0,3,0"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Right"
                                BorderThickness="0"
                                Style="{DynamicResource MinimiseToSystemTrayButtonStyle}">

                            <Button.Effect>
                                <DropShadowEffect BlurRadius="15"
                                                  Direction="-90"
                                                  RenderingBias="Quality"
                                                  ShadowDepth="0"
                                                  Opacity="0.2"/>
                            </Button.Effect>
                        </Button>

                        <!-- Minimise button-->
                        <Button x:Name="MinimiseButton"
                                Click="MinimiseButtonClick"
                                Width="45"
                                Height="30"
                                Margin="0,0,4,0"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Right"
                                BorderThickness="0"
                                Style="{DynamicResource MinimiseButtonStyle}">

                            <Button.Effect>
                                <DropShadowEffect BlurRadius="15"
                                                      Direction="-90"
                                                      RenderingBias="Quality"
                                                      ShadowDepth="0"
                                                      Opacity="0.2"/>
                            </Button.Effect>
                        </Button>

                        <!-- Exit button -->
                        <Button x:Name="ExitButton"
                                Click="CloseLauncher"
                                RenderOptions.BitmapScalingMode="Fant"
                                Width="45"
                                Height="30"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Right"
                                BorderThickness="0"
                                Style="{DynamicResource CloseButtonStyle}">

                            <Button.Effect>
                                <DropShadowEffect BlurRadius="15"
                                                  Direction="-90"
                                                  RenderingBias="Quality"
                                                  ShadowDepth="0"
                                                  Opacity="0.2"/>
                            </Button.Effect>
                        </Button>
                    </StackPanel>

                    <!-- Website and discord components -->
                    <StackPanel Grid.Row="1"
                                Grid.Column="1"
                                Grid.ColumnSpan="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                Margin="0,0,35,20">

                        <!-- Join the community at message -->
                        <TextBlock Foreground="White"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right"
                                   Margin="0,0,25,0"
                                   FontWeight="Light">
                                
                                <TextBlock Text="{DynamicResource item12}"/>

                                <Hyperlink NavigateUri="https://h1emu.com/"
                                           RequestNavigate="H1Hyperlink"
                                           Foreground="White">
                                    
                                    <TextBlock Text="h1emu.com"
                                               Style="{DynamicResource HyperLinkStyle}"/>
                                    
                                </Hyperlink>
                                    
                                    <!-- Context menu to copy link -->
                                    <TextBlock.ContextMenu>
                                        <ContextMenu Style="{DynamicResource ContextMenuStyle}">
                                            <MenuItem Click="websiteLinkCopy"
                                                      Header="{DynamicResource item193}"
                                                      Style="{DynamicResource CopyMenuItem}">
                                            </MenuItem>
                                        </ContextMenu>
                                    </TextBlock.ContextMenu>
                                
                                <TextBlock.Effect>
                                    <DropShadowEffect BlurRadius="15"
                                                      Direction="-90"
                                                      RenderingBias="Quality"
                                                      ShadowDepth="0"
                                                      Opacity="0.4"/>
                                </TextBlock.Effect>
                            </TextBlock>

                        <Button x:Name="discordLink"
                                Grid.Column="1"
                                Click="OpenDiscord"
                                RenderOptions.BitmapScalingMode="Fant"
                                Width="160"
                                Height="44"
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Right"
                                BorderThickness="0"
                                Style="{DynamicResource DiscordButton}">

                            <Button.ContextMenu>
                                <ContextMenu Style="{DynamicResource ContextMenuStyle}">
                                    <MenuItem Click="discordLinkCopy"
                                              Header="{DynamicResource item193}"
                                              Style="{DynamicResource CopyMenuItem}"/>

                                </ContextMenu>
                            </Button.ContextMenu>

                            <Button.Effect>
                                <DropShadowEffect BlurRadius="15"
                                                  Direction="-90"
                                                  RenderingBias="Quality"
                                                  ShadowDepth="0"
                                                  Opacity="0.2"/>
                            </Button.Effect>
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>

            <Border Grid.Row="1"
                    Margin="35,0,35,0"
                    UseLayoutRounding="True"
                    Background="#1C1B22"
                    CornerRadius="5">

                <!-- Drop shadow effect -->
                <Border.Effect>
                    <DropShadowEffect BlurRadius="15"
                                      Direction="-90"
                                      RenderingBias="Quality"
                                      ShadowDepth="1"/>

                </Border.Effect>

                <!-- Main content in darkened area -->
                <Border CornerRadius="5">

                    <!-- Grainy texture -->
                    <Border.Background>
                        <ImageBrush ImageSource="..\Resources\Grain.png" Opacity="0.5" TileMode="Tile" ViewportUnits="Absolute" Viewport="0,0,512,512"/>
                    </Border.Background>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*"/>
                        </Grid.RowDefinitions>

                        <!-- This grid splits the left side in half -->
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="197*"/>
                                <RowDefinition Height="370*"/>
                            </Grid.RowDefinitions>

                            <!-- Grid to dock the game image -->
                            <Grid Grid.Row="1"
                                  Margin="30,27,10,25"
                                  MouseEnter="CarouselMouseEnter"
                                  MouseLeave="CarouselMouseLeave">

                                <!-- Image carousel grid -->
                                <Grid x:Name="imageCarousel"
                                      ClipToBounds="True">

                                    <Image x:Name="carouselImage"
                                           Source="..\Resources\2.jpg"
                                           RenderOptions.BitmapScalingMode="Fant"
                                           Stretch="Fill">

                                        <Image.RenderTransform>
                                            <TranslateTransform x:Name="carouselImageTranslate"/>
                                        </Image.RenderTransform>
                                    </Image>

                                    <Image x:Name="carouselImageFollow"
                                           RenderOptions.BitmapScalingMode="Fant"
                                           Stretch="Fill">

                                        <Image.RenderTransform>
                                            <TranslateTransform x:Name="carouselImageFollowTranslate"/>
                                        </Image.RenderTransform>
                                    </Image>

                                    <!-- Next image button -->
                                    <Button x:Name="nextImage"
                                            Click="NextImageClick"
                                            Width="30"
                                            HorizontalAlignment="Right"
                                            BorderThickness="0"
                                            Foreground="White"
                                            Visibility="Hidden"
                                            Style="{DynamicResource CarouselButtonNext}"/>

                                    <!-- Previous image button -->
                                    <Button x:Name="prevImage"
                                            Click="PrevImageClick"
                                            Width="30"
                                            HorizontalAlignment="Left"
                                            BorderThickness="0"
                                            Foreground="White"
                                            Visibility="Hidden"
                                            Style="{DynamicResource CarouselButtonPrevious}"/>

                                    <Border x:Name="carouselRectangleGrid"
                                            VerticalAlignment="Bottom">

                                        <Grid>
                                            <!-- Fill space to get width -->
                                            <Rectangle Fill="Transparent"
                                                       Height="4"/>

                                            <!-- Image carousel progress bar -->
                                            <Rectangle x:Name="carouselRectangle"
                                                       Fill="#DB111C"
                                                       Height="4"
                                                       HorizontalAlignment="Left"/>
                                        </Grid>
                                    </Border>
                                </Grid>

                                <Grid x:Name="carouselVisibilityButtonGrid">
                                    
                                    <!-- Image carousel visibility show button -->
                                    <Button x:Name="showCarouselButton"
                                            Click="toggleCarouselImageVisibility"
                                            RenderOptions.BitmapScalingMode="Fant"
                                            Width="24"
                                            Height="24"
                                            Margin="0,20,0,0"
                                            VerticalAlignment="Top"
                                            HorizontalAlignment="Center"
                                            BorderThickness="0"
                                            Visibility="Hidden"
                                            Style="{StaticResource ShowKeyButton}">

                                        <Button.Background>
                                            <ImageBrush ImageSource="..\Resources\ShowKey.png"/>
                                        </Button.Background>
                                    </Button>

                                    <!-- Image carousel visibility hide button -->
                                    <Button x:Name="hideCarouselButton"
                                            Click="toggleCarouselImageVisibility"
                                            RenderOptions.BitmapScalingMode="Fant"
                                            Width="24"
                                            Height="24"
                                            Margin="0,20,0,0"
                                            VerticalAlignment="Top"
                                            HorizontalAlignment="Center"
                                            BorderThickness="0"
                                            Visibility="Hidden"
                                            Style="{StaticResource HideKeyButton}">

                                        <Button.Background>
                                            <ImageBrush ImageSource="..\Resources\HideKey.png"/>
                                        </Button.Background>
                                    </Button>
                                </Grid>

                                <Grid.Background>
                                    <ImageBrush ImageSource="..\Resources\4.jpg"/>
                                </Grid.Background>
                                
                                <!-- Drop shadow effect -->
                                <Grid.Effect>
                                    <DropShadowEffect BlurRadius="15"
                                                      Direction="-90"
                                                      RenderingBias="Quality"
                                                      ShadowDepth="1"
                                                      Opacity="0.2"/>

                                </Grid.Effect>
                            </Grid>
                        </Grid>

                        <!-- Update version information -->
                        <StackPanel Margin="25,10,12,0">
                            <TextBlock x:Name="titleUpdate"
                                       Background="Transparent"
                                       Foreground="White"
                                       Cursor="Arrow">

                                <!-- Version text -->
                                <Run x:Name="titleUpdateText"
                                     Foreground="#FFED1C24"
                                     FontFamily="{DynamicResource Signika}"
                                     FontSize="44"
                                     FontWeight="Bold"
                                     Text="{DynamicResource item3}"/>

                                <!-- Update version number -->
                                <Run x:Name="updateVersion"
                                     Foreground="#FFED1C24"
                                     FontFamily="{DynamicResource Signika}"
                                     FontSize="44"
                                     FontWeight="Bold"/>

                                <!-- Date version was published -->
                                <Run x:Name="datePublished"
                                     FontFamily="Bahnschrift Light"
                                     FontSize="16"/>
                            </TextBlock>

                            <!-- Patch notes textbox -->
                            <ScrollViewer Height="104"
                                          VerticalScrollBarVisibility="Hidden">

                                <TextBlock x:Name="patchNotesBox"
                                           Margin="0,10,0,0"
                                           Background="Transparent"
                                           Foreground="White"
                                           FontWeight="Light"
                                           Cursor="Arrow"
                                           TextWrapping="Wrap"/>

                            </ScrollViewer>

                            <!-- Read full details of update hyperlink -->
                            <TextBlock Margin="6,22,0,0"
                                       FontWeight="Light">
                            
                                <Hyperlink NavigateUri="https://www.h1emu.com/us/changelog/"
                                           RequestNavigate="FullUpdatesHyperlink"
                                           Foreground="White">
                            
                                    <TextBlock Text="{DynamicResource item61}"
                                               Style="{DynamicResource HyperLinkStyle}"/>
                                </Hyperlink>
                        
                                <!-- Context menu to copy link -->
                                <TextBlock.ContextMenu>
                                    <ContextMenu Style="{DynamicResource ContextMenuStyle}">
                                        <MenuItem Click="patchNotesCopy"
                                                  Header="{DynamicResource item193}"
                                                  Style="{DynamicResource CopyMenuItem}"/>
                                
                                    </ContextMenu>
                                </TextBlock.ContextMenu>
                            </TextBlock>
                        </StackPanel>

                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="220*"/>
                                <RowDefinition Height="338*"/>
                            </Grid.RowDefinitions>

                            <!-- Must own the game in order to download message -->
                            <StackPanel Margin="20,20,30,0">
                                <TextBlock Background="Transparent"
                                           Foreground="White"
                                           FontWeight="Light"
                                           Cursor="Arrow"
                                           TextWrapping="Wrap">

                                <Run Foreground="#FFCA1420"
                                     Text="{DynamicResource item10}"/>
                                    
                                <Run Text="{DynamicResource item11}"/>
                                    
                                <LineBreak/>
                                <LineBreak/>
                                    
                                <Run Text="{DynamicResource item50}"/>

                                </TextBlock>

                                <!-- H1Emu Chinese Community link -->
                                <TextBlock Margin="6,46,0,0"
                                           x:Name="chineseLink"
                                           Visibility="Collapsed"
                                           FontFamily="Bahnschrift"
                                           Text="点击进入 "
                                           Foreground="White"
                                           FontWeight="Bold">
                            
                                    <Hyperlink NavigateUri="https://azaz.ge/"
                                               RequestNavigate="H1EmuChineseLink"
                                               Foreground="White">
                            
                                        <TextBlock Text="H1Emu中文社区"
                                                   Style="{DynamicResource HyperLinkStyle}"
                                                   FontWeight="Bold"/>
                                    </Hyperlink>
                            
                                <TextBlock Text="，了解更多中文信息。"
                                           FontWeight="Bold"/>

                                <!-- Context menu to copy link -->
                                <TextBlock.ContextMenu>
                                    <ContextMenu Style="{DynamicResource ContextMenuStyle}">
                                        <MenuItem Click="chineseLinkCopy"
                                                  Header="{DynamicResource item193}"
                                                  Style="{DynamicResource CopyMenuItem}"/>
                                
                                    </ContextMenu>
                                </TextBlock.ContextMenu>  
                            </TextBlock>
                            </StackPanel>

                            <!-- Grid that hosts Steam frame, server selector and play button -->
                            <Grid Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="140"/>
                                </Grid.RowDefinitions>

                                <!-- Steam frame -->
                                <Frame x:Name="steamFramePanel"
                                       Margin="20,0,30,0"
                                       Height="140"
                                       VerticalAlignment="Top"
                                       Source="..\SteamFrame\Login.xaml"
                                       NavigationUIVisibility="Hidden"
                                       f:DisableFrameNavigation.Disable="True"/>
                            </Grid>

                            <Grid Grid.Row="1"
                                  Margin="12,0,30,25">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Divider -->
                                <Border Height="1"
                                        Background="#FFCA1420"
                                        VerticalAlignment="Bottom"
                                        Margin="7,0,0,75"
                                        CornerRadius="20"
                                        Grid.ColumnSpan="2"
                                        RenderOptions.BitmapScalingMode="Fant">

                                    <!-- Drop shadow effect -->
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="8"
                                                          Direction="-90"
                                                          RenderingBias="Quality"
                                                          ShadowDepth="1"/>

                                    </Border.Effect>
                                </Border>

                                <!-- Server selector combobox -->
                                <ComboBox x:Name="serverSelector"
                                          Height="35"
                                          Margin="7,0,7,5"
                                          Padding="38,2,15,0"
                                          VerticalAlignment="Bottom"
                                          VerticalContentAlignment="Center"
                                          Foreground="White"
                                          FontWeight="Light"
                                          BorderThickness="2"
                                          SelectedIndex="0"
                                          SelectionChanged="ServerSelectorChanged"
                                          PreviewMouseDown="ServerSelectorPreviewMouseDown"
                                          Style="{DynamicResource ComboBox}">


                                    <ComboBoxItem Content="{DynamicResource item139}"
                                                  Style="{DynamicResource ComboBoxItemStyle}"/>

                                    <ComboBoxItem Content="{DynamicResource item140}"
                                                  Style="{DynamicResource ComboBoxItemStyle}"/>

                                    <Separator Background="#444444"/>

                                    <ComboBoxItem x:Name="newServer"
                                                  Content="{DynamicResource item141}"
                                                  PreviewMouseLeftButtonUp="AddNewServer"
                                                  Style="{DynamicResource ComboBoxItemStyle}"/>
                                </ComboBox>

                                <!-- Server selector icon -->
                                <Image Source="..\Resources\Server.png"
                                       RenderOptions.BitmapScalingMode="Fant"
                                       Width="20"
                                       Height="20"
                                       Margin="17,0,0,13"
                                       VerticalAlignment="Bottom"
                                       HorizontalAlignment="Left"
                                       IsHitTestVisible="False"/>

                                <!-- Play button -->
                                <Button x:Name="playButton"
                                        Grid.Column="1"
                                        Click="LaunchClient"
                                        RenderOptions.BitmapScalingMode="Fant"
                                        Height="45"
                                        Margin="7,0,0,0"
                                        VerticalAlignment="Bottom"
                                        Foreground="White"
                                        FontFamily="Arial Black"
                                        FontSize="28"
                                        BorderThickness="0"
                                        Content="{DynamicResource item8}"
                                        Style="{DynamicResource StandardButton}"/>
                            </Grid>
                        </Grid>
                    </Grid>
                </Border>
            </Border>

            <!-- Footer -->
            <DockPanel Grid.Row="2">

                <!-- Settings icon -->
                <Image Source="..\Resources\Settings.png"
                       RenderOptions.BitmapScalingMode="Fant"
                       Width="18"
                       Margin="35,0,0,0"
                       VerticalAlignment="Center"
                       RenderTransformOrigin="0.5, 0.5">

                    <Image.RenderTransform>
                        <RotateTransform x:Name="rotateSettingsIcon" Angle="0"/>
                    </Image.RenderTransform>

                    <Image.Effect>
                        <DropShadowEffect BlurRadius="15"
                                          Direction="-90"
                                          RenderingBias="Quality"
                                          ShadowDepth="0"
                                          Opacity="0.4"/>
                    </Image.Effect>
                </Image>

                <!-- Hyperlink to open settings menu -->
                <TextBlock Margin="8,2,0,0"
                           VerticalAlignment="Center"
                           FontWeight="Light">
                    
                    <!-- Hyperlink for settings window -->
                    <Hyperlink Click="HyperlinkClick"
                               Foreground="White">
                        
                        <TextBlock Text="{DynamicResource item62}"
                                   Style="{DynamicResource HyperLinkStyle}">

                            <TextBlock.Triggers>
                                <EventTrigger RoutedEvent="MouseEnter">
                                    <BeginStoryboard x:Name="beginSettingsIconRotation">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="rotateSettingsIcon"
                                                             Storyboard.TargetProperty="Angle"
                                                             By="0"
                                                             To="90"
                                                             Duration="0:0:0.5"
                                                             FillBehavior="Stop"
                                                             RepeatBehavior="Forever"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="MouseLeave">
                                    <StopStoryboard BeginStoryboardName="beginSettingsIconRotation"/>
                                </EventTrigger>
                            </TextBlock.Triggers>
                        </TextBlock>
                    </Hyperlink>
                    
                    <TextBlock.Effect>
                        <DropShadowEffect BlurRadius="15"
                                          Direction="-90"
                                          RenderingBias="Quality"
                                          ShadowDepth="0"
                                          Opacity="0.4"/>
                    </TextBlock.Effect>
                </TextBlock>

                <!-- Copyright notice -->
                <TextBlock Margin="0,2,35,0"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"
                           Foreground="White"
                           FontWeight="Light"
                           Text="{DynamicResource item125}">

                    <TextBlock.Effect>
                        <DropShadowEffect BlurRadius="15"
                                          Direction="-90"
                                          RenderingBias="Quality"
                                          ShadowDepth="0"
                                          Opacity="0.4"/>
                    </TextBlock.Effect>
                </TextBlock>
            </DockPanel>
        </Grid>

        <!-- Background fade on unfocus -->
        <Rectangle x:Name="launcherFade"
                   Fill="#40000000"
                   IsHitTestVisible="False"
                   Opacity="0"/>

    </Grid>
</Window>