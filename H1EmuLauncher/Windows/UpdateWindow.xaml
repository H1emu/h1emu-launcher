<Window x:Class="H1EmuLauncher.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="H1Emu Update Available"
        MinWidth="450"
        MaxWidth="450"
        MinHeight="200"
        MaxHeight="670"
        SizeToContent="WidthAndHeight"
        Activated="MainUpdateWindowActivated"
        WindowStartupLocation="CenterScreen"
        Background="#FF2A2A32"
        Loaded="MainUpdateWindowLoaded"
        Closing="MainUpdateWindowClosing"
        FontFamily="Bahnschrift">

        <!-- Hide window border but keep animations -->
        <WindowChrome.WindowChrome>
            <WindowChrome
                GlassFrameThickness="0"
                CornerRadius="0"
                CaptionHeight="0"
                ResizeBorderThickness="0"
                UseAeroCaptionButtons="False"/>

        </WindowChrome.WindowChrome>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <!-- Grid for logo and exit button -->
        <Grid
            MouseLeftButtonDown="MoveWindow"
            Background="#FF2A2A32">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Logo -->
            <DockPanel>
                <Image Source="..\Resources\H1EmuIcon.png"
                       Width="130"
                       Height="35"
                       Margin="23,16,0,0"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"/>

            </DockPanel>

            <!-- Exit button -->
            <DockPanel Grid.Column="1" Grid.Row="0" Margin="0">
                <Button x:Name="closeButton"
                        RenderOptions.BitmapScalingMode="Fant"
                        Width="44"
                        Height="30"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right"
                        BorderThickness="0"
                        Click="CloseUpdater"
                        Margin="0,5,25,0"
                        Style="{StaticResource CloseButtonStyle}">
                    
                    <Button.Background>
                        <ImageBrush ImageSource="..\Resources\Exit.png"/>
                    </Button.Background>
                </Button>
            </DockPanel>
        </Grid>

        <!-- Main content in darkened area -->
        <Border Grid.Row="1"
                Background="#1C1B22"
                Margin="25,10,25,25"
                UseLayoutRounding="True"
                CornerRadius="5">

            <!-- Drop shadow effect -->
            <Border.Effect>
                <DropShadowEffect BlurRadius="10"
                                  Direction="-90"
                                  RenderingBias="Quality"
                                  ShadowDepth="1"/>

            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <!-- Main text message -->
                <TextBlock Margin="50,20,50,20"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           FontSize="18"
                           FontWeight="Light"
                           Foreground="FloralWhite"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Text="{DynamicResource item1}"/>

                <!-- Update button -->
                <Button x:Name="updateButton"
                        Grid.Row="1"
                        Click="UpdateButtonClick"
                        RenderOptions.BitmapScalingMode="Fant"
                        Width="292"
                        Height="44"
                        HorizontalAlignment="Center"
                        Foreground="White"
                        FontFamily="Arial Black"
                        FontSize="24"
                        BorderThickness="0"
                        Content="{DynamicResource item2}"
                        Style="{DynamicResource StandardButton}">

                    <Button.Background>
                        <ImageBrush ImageSource="..\Resources\StandardButton.png"/>
                    </Button.Background>
                </Button>

                <!-- Not now button -->
                <TextBlock x:Name="notNowText"
                           Grid.Row="2"
                           Margin="50,15,50,15"
                           VerticalAlignment="Bottom"
                           HorizontalAlignment="Center"
                           FontSize="16">
                
                    <Hyperlink x:Name="notNowHyperlink"
                               Click="NotNowClick"
                               Foreground="White">
                    
                        <TextBlock Text="{DynamicResource item67}"
                                   MouseDown="NotNowHyperLinkMouseDown"
                                   Style="{DynamicResource HyperLinkStyle}"/>
                    
                    </Hyperlink>
                </TextBlock>

                <Grid x:Name="progressBarGrid"
                      Grid.Row="3"
                      Visibility="Collapsed">
                    
                    <!-- Setup download progress bar -->
                    <ProgressBar x:Name="downloadSetupProgress"
                                 Height="25"
                                 Margin="54,20,54,20"
                                 Style="{DynamicResource ProgressBar}"/>

                    <!-- Progress bar outline (usually the fill colour overlaps the outline of the progress bar) -->
                    <ProgressBar Height="25"
                                 Margin="54,20,54,20"
                                 Background="Transparent"
                                 Style="{DynamicResource ProgressBar}"/>
                    
                    <!-- Status text to overlay progress bar -->
                    <TextBlock x:Name="downloadSetupProgressText"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Margin="0,0,0,1"
                               Foreground="White"
                               FontWeight="Light"
                               Background="Transparent"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
