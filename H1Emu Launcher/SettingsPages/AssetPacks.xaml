<Page x:Class="H1Emu_Launcher.SettingsPages.AssetPacks"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:H1Emu_Launcher.SettingsPages"
      mc:Ignorable="d" 
      UseLayoutRounding="True"
      d:DesignWidth="735"
      Title="Asset Packs"
      FontFamily="Bahnschrift Light"
      FontSize="16"
      Foreground="FloralWhite"
      Initialized="AssetPacksInitialized">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="..\Language\StringResources.en-EN.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Border Background="{DynamicResource DarkerColour}"
            UseLayoutRounding="True"
            CornerRadius="0,5,5,5">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="10"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="10"/>
            </Grid.RowDefinitions>

            <!-- Disclaimer -->
            <TextBlock Grid.Row="1"
                       Margin="20"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       Foreground="FloralWhite"
                       TextWrapping="Wrap"
                       Text="{DynamicResource item225}"
                       Style="{DynamicResource TextBlockStyle}"/>

            <!-- Divider -->
            <Rectangle Grid.Row="2"
                       Margin="20,0,20,0"
                       Height="1"
                       Fill="{DynamicResource LighterColour}">

                <Rectangle.Effect>
                    <DropShadowEffect BlurRadius="8"
                                      Direction="-90"
                                      RenderingBias="Quality"
                                      ShadowDepth="1"
                                      Opacity="0.3"/>
                </Rectangle.Effect>
            </Rectangle>

            <!-- Asset Pack ComboBox -->
            <ComboBox x:Name="assetPacksBox"
                      Grid.Row="3"
                      Height="35"
                      Margin="20"
                      Padding="10,2,4,0"
                      VerticalAlignment="Center"
                      VerticalContentAlignment="Center"
                      Foreground="FloralWhite"
                      FontWeight="Light"
                      BorderThickness="2"
                      SelectedIndex="0"
                      SelectionChanged="AssetPacksBoxSelectionChanged"
                      Style="{DynamicResource ComboBoxStyle}">

                <!-- Example static items, replace with data binding as needed -->
                <ComboBoxItem Content="{DynamicResource item226}"
                              Style="{DynamicResource ComboBoxItemStyle}"/>

                <Separator Background="#444444"/>

                <ComboBoxItem Content="{DynamicResource item227}"
                              PreviewMouseLeftButtonUp="AddAssetPackClick"
                              Style="{DynamicResource ComboBoxItemStyle}"/>
                
                <ComboBox.Effect>
                    <DropShadowEffect BlurRadius="15"
                                      Direction="-90"
                                      RenderingBias="Quality"
                                      ShadowDepth="0"
                                      Opacity="0.3"/>
                    
                </ComboBox.Effect>
            </ComboBox>
        </Grid>
    </Border>
</Page>
